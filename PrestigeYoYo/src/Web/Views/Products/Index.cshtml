
<script type="text/javascript">
    // http://www.trirand.com/jqgridwiki/doku.php?id=wiki:jqgriddocs
    $(document).ready(function () {

        // Set up the jquery grid
        $("#productsTable").jqGrid({
            // Ajax related configurations
            caption: "Products",
            url: "@Url.Action("Data", "Products")",
            datatype: "json",
            mtype: "POST",
            hidegrid: false,

            editurl: "@Url.Action("Edit", "Products")",

            // Specify the column names
            colNames: ["Guid", "SKU", "Description", "Colour"],

            // Configure the columns
            colModel:
            [
            {
                name: "Guid",
                index: "Guid",
                hidden: true,
                editable: true
            },
            {
                name: "SKU",
                index: "SKU",
                align: "left",
                editable: true
            },
            {
                name: "Description",
                index: "Description",
                align: "left",
                editable: true
            },
            {
                name: "Colour",
                index: "Colour",
                align: "left",
                editable: true
            }
            ],

            // Grid total width and height
            width: 1500,
            height: 'auto',

            // Paging
            toppager: false,
            pager: $("#productsTablePager"),
            rowNum: 10,
            rowList: [5, 10, 15, 25],
            viewrecords: true, // Specify if "total number of records" is displayed

            // Default sorting
            sortname: "SKU",
            sortorder: "asc"

        }).navGrid("#productsTablePager",
            { refresh: true, add: true, edit: true, del: false },
                {
                    closeAfterEdit: true,
                    viewPagerButtons: false
                }, // settings for edit
                {
                    closeAfterAdd: true,
                    url: "@Url.Action("Add", "Products")"
                }, // settings for add
                {}, // settings for delete
                { sopt: ["cn"] } // Search options. Some options can be set on column level
        );
        
        $("#productsTable").jqGrid("setGridWidth", $("#gridWrapper").width(), true);
    });
</script>

<div id="gridWrapper">
    <table id="productsTable" class="scroll"></table>
    <div id="productsTablePager"></div>
</div>
