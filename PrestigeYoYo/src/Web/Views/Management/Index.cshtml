@{
    ViewBag.Title = "Data Management";
}

<style type="text/css">
    .ui-jqdialog-titlebar,
    .ui-jqgrid-titlebar
    {
        height: 15px;
    }    
    #toolbar {
        padding: 5px;
        margin-bottom:10px;
    }
</style>

<script type="text/javascript">
    var gridObject;
    $(function () {
        $("#productsBtn")
            .click(function () {
                $("#container").load("@Url.Action("Index", "Products")");
            });
        $("#defectsBtn")
            .click(function () {
                $("#container").load("@Url.Action("Index", "Defects")");
            });
        $("#stationsBtn")
            .click(function () {
                $("#container").load("@Url.Action("Index", "Stations")");
            });
            
        $("#btn").buttonset();

        $(window).resize(function () {
            if (gridObject) {
                gridObject.jqGrid("setGridWidth", $("#gridWrapper").width(), true);
            }
        });
    });
</script>

<h2>Data Management</h2>

<span id="toolbar" class="ui-widget-header ui-corner-all" style="display:inline-block;">
    <span id="btn">
        <input type="radio" id="productsBtn" name="btn" checked="checked" /><label for="productsBtn">Products</label>
        <input type="radio" id="defectsBtn" name="btn" /><label for="defectsBtn">Defects</label>
        <input type="radio" id="stationsBtn" name="btn" /><label for="stationsBtn">Stations</label>
    </span>
</span>

<div id="container">
    @Html.Action("Index", "Products")
</div>